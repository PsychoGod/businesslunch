.row
  .col-md-12
    %h1 Users
.row
  .col-md-12
    %table.table.table-responsive.table-hover
      %thead
        %tr
          %th= User.human_attribute_name :email
          %th= User.human_attribute_name :amount
      %tbody
        - @users.each do |user|
          %tr
            %td= user.email
            %td= user.amount

.row
  .col-md-12
    = paginate @users

